<zk>
	<window title="Form Leave" border="normal" height="350px" width="40%" mode="modal" closable="true"><!-- vflex="true"  -->
		<borderlayout>
			<north>
				<toolbar>
					<button image="/images/icons/btn_save.gif" id="buttonSaveVacancy" label="Save" onClick="@command('doSave')"/>
				</toolbar>
			</north>
			<center>
				<grid>
					<columns>
						<column/>
						<column/>
					</columns>
					<rows>
						<row>
							<label value="Employee Name"/>
							<bandbox/>
						</row>
						<row>
							<label value="Leave Type"/>
							<bandbox/>
						</row>
						<row>
							<label value="Leave Balance"/>
							<textbox/>
						</row>
						<row>
							<label value="From Date"/>
							<datebox/>
						</row>
						<row>
							<label value="To Date"/>
							<datebox/>
						</row>
						<row>
							<label value="Comment"/>
							<textbox/>
						</row>
					</rows>
				</grid>
			</center>
		</borderlayout>	
	</window>
</zk>